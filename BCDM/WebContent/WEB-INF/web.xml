<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Authentication</display-name>
  <welcome-file-list>
    <welcome-file>view/LoginView.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Authentication</servlet-name>
    <servlet-class>control.LoginControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Authentication</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
  <display-name>Reservation</display-name>
  <welcome-file-list>
	<welcome-file>view/LoginSuccessView.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
	<servlet-name>Reservation</servlet-name>
	<servlet-class>control.ReservationControl</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>Reservation</servlet-name>
	<url-pattern>/reservation</url-pattern>
  </servlet-mapping>
  
    <display-name>SetReservation</display-name>
  <welcome-file-list>
	<welcome-file>view/SetStatusReservation.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
	<servlet-name>SetReservation</servlet-name>
	<servlet-class>control.SetReservationControl</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>SetReservation</servlet-name>
	<url-pattern>/setreservation</url-pattern>
  </servlet-mapping>

      <display-name>GetReservation</display-name>
  <welcome-file-list>
	<welcome-file>view/FinalStatusReservation.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
	<servlet-name>GetReservation</servlet-name>
	<servlet-class>control.GetReservationControl</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>GetReservation</servlet-name>
	<url-pattern>/getreservation</url-pattern>
  </servlet-mapping>

</web-app>